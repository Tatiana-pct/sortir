{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div>
        <h1 >Gerer les villes</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('villes_create') }}" >Ajouter une ville</a>
        {% endif %}
        <table  style="width:100%">
            <thead>
            <th>
            <td >id</td>
            <td >Nom</td>
            <td >Code postale</td>

            {% if is_granted('ROLE_ADMIN') %}

                <td >Action</td>

            {% endif %}

            </th>
            </thead>
            <tbody>

            {% if ville is defined and ville is not empty %}

                {% for ville in ville %}

                    <tr>
                        <td >{{ ville.id }} </td>
                        <td >{{ ville.nom }}</td>
                        <td >{{ ville.codePostal }}</td>

                        {% if is_granted('ROLE_ADMIN') %}


                            <td >Action</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% else %}
                <tr >
                    <th scope="row" colspan="4">Aucun ville trouv√©...</th>
                </tr>
            {% endif %}
            </tbody>
        </table>

    </div>
{% endblock %}