{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div>
        <h1 >Gerer les campus</h1>


        <table  style="width:100%">
            <div>
                #afficher fomulaire de recherche
                <input type="button" name="recherche" value="recherche">
            </div>

            <thead>
            <th>
                <td >id</td>
                <td >Nom</td>

                {% if is_granted('ROLE_ADMIN') %}

                    <td >Action</td>

                {% endif %}

            </th>
            </thead>
            <tbody>

            {% if campus is defined and campus is not empty %}

                {% for campus in campus %}

                    <tr>
                        <td >{{ campus.id }} </td>
                        <td >{{ campus.nom }}</td>

                        {% if is_granted('ROLE_ADMIN') %}


                            <td >Action</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% else %}
                <tr >
                    <th scope="row" colspan="4">Aucun lieu trouv√©...</th>
                </tr>
            {% endif %}
            </tbody>
        </table>

    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <br>
        <div>

            #afficher formulaire d'ajout
        </div>
        <br>
        <a href="{{ path('campus_create') }}" >Ajouter un Campus</a>

    {% endif %}

{% endblock %}